
  <div class="{{entityName}}">
    <{{pascal entityName}}Details v-bind:{{entityName}}="current{{pascal entityName}}"
      v-show="isVisible{{pascal entityName}}Details"
      v-on:close-{{entityName}}-details="close{{pascal entityName}}Details"/>

    <v-icon @click="showAdd{{pascal entityName}}Form" v-show="!isVisible{{pascal entityName}}Form">add_circle</v-icon>
