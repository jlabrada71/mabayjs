      v-show="isVisible{{pascal entityName}}Form"
      v-bind:{{entityName}}="current{{pascal entityName}}"
      v-bind:is-updating="isUpdating{{pascal entityName}}"
      v-on:add-{{entityName}}="add{{pascal entityName}}"
      v-on:update-{{entityName}}="update{{pascal entityName}}"
      v-on:cancel-add-{{entityName}}="cancelAdd{{pascal entityName}}"/>
    <h1 class="display-2 blue darken-4 white--text text--lighten-1">{{pascal entityName}} list</h1>
    <{{pascal entityName}}List v-bind:{{entityName}}s="{{entityName}}s"
      v-on:show-{{entityName}}="show{{pascal entityName}}Details"
      v-on:edit-{{entityName}}="edit{{pascal entityName}}"
      v-on:delete-{{entityName}}="delete{{pascal entityName}}"/>
  </div>
